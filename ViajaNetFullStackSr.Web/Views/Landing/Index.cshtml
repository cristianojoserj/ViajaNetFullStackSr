
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1>Escolha seu destino!!</h1>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="width:400px;height:400px;text-align:center">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/jpg/CristoRedentor.jpg" alt="Cristo Redentor">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Cristo Redentor</h5>
                        <p>Vista maravilhosa!</p>
                        <button type="button" class="btn btn-outline-warning" onclick="window.open('Checkout?id=1','_self');">Eu quero!</button>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/jpg/PaoDeAcucar.jpg" alt="Pão de açuar">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Páo da açucar</h5>
                        <p>Cartão postal!</p>
                        <button type="button" class="btn btn-outline-warning" onclick="window.open('Checkout?id=2','_self');">Eu quero!</button>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/jpg/Rocinha.jpg" alt="Rocinha">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Rocinha</h5>
                        <p>Maior favela do estado</p>
                        <button type="button" class="btn btn-outline-warning" onclick="window.open('Checkout?id=3','_self');">Eu quero!</button>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        logAccess();
    });
</script>